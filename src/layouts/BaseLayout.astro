---
import THEME_BASE from 'themes:base';
import BaseHead from 'layouts:components/BaseHead/index';
import Header from 'layouts:components/Header/index';
import Footer from 'layouts:components/Footer/index';
import ApiProvider from './ApiProvider';
import HydrateProvider from 'src/layouts/HydrateProvider';

export interface Props {
  title?: string;
  description?: string;
  hasHeaderOverlap?: boolean;
  showHero?: boolean;
  showReferral?: boolean;
}

const { title, description, hasHeaderOverlap, showHero, showReferral } =
  Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <!-- Header -->
    <Header hasOverlap={hasHeaderOverlap} />

    <!-- Main -->
    <main>
      <ApiProvider client:load>
        <HydrateProvider
          client:load
          showHero={showHero}
          showReferral={showReferral}
        >
          <slot />
        </HydrateProvider>
      </ApiProvider>
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Global styles -->
    <style
      is:global
      define:vars={{
        ...THEME_BASE,
      }}
    >

    </style>
    <script>
      var global = global || window;
      var Buffer = Buffer || [];
      var process = process || { env: { DEBUG: undefined }, version: [] };
      (function() {
          var link = document.createElement('link');
          link.rel = "stylesheet";
          link.href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Roboto:wght@400;700&display=swap"
          document.querySelector("head").appendChild(link);
      })();
    </script>

    <script>
      const currentLocation = window.location.pathname;
      const code = currentLocation.split('/')[1];
      console.log('currentLocation', currentLocation, code);
      if (code && code.length === 8) {
        localStorage.set('referralCode', code);
      }
    </script>
  </body>
</html>
