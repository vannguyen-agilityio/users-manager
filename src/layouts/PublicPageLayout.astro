---
import THEME_BASE from 'themes:base';
import 'styles:global';
export interface Props {
  title?: string;
  description?: string;
  hasHeaderOverlap?: boolean;
  showHero?: boolean;
  showReferral?: boolean;
  showContact?: boolean;
  privateRoute?: boolean;
}
const { title, description } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Roboto:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="public-page-layout">
    <div class="container">
      <div class="d-flex public-page-content">
        <slot />
      </div>
    </div>

    <!-- Global styles -->
    <style
      is:global
      define:vars={{
        ...THEME_BASE,
      }}
    >

    </style>
    <script>
      var global = global || window;
      var Buffer = Buffer || [];
      var process = process || { env: { DEBUG: undefined }, version: [] };
    </script>
  </body>
</html>
