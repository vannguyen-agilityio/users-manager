---
import CardInfo from 'components:CardInfo/index';
import './styles.css';
---

<section class="card-info-list">
  <div class="container">
    <CardInfo
      imageUrl={{
        mobile: 'assets/images/home/mobile/doge-card.webp',
        desktop: 'assets/images/home/desktop/doge-card.webp',
      }}
      imageWidth={{
        mobile: '183px',
        desktop: '292px',
      }}
      heading="Buy, Sell, Send, Spend, Earn Dogecoin"
    >
      <p class="card-info-description">
        DogeCard is the one-stop app for everything Dogecoin.
      </p>
    </CardInfo>

    <CardInfo
      isReversed={true}
      imageUrl={{
        mobile: 'assets/images/home/mobile/doge-earn-card.webp',
        desktop: 'assets/images/home/desktop/doge-earn-card.webp',
      }}
      imageWidth={{
        mobile: '183px',
        desktop: '292px',
      }}
      heading="Earn Dogecoin Rewards"
    >
      <p class="card-info-description">
        Pay your bills and expenses with the DogeCard and earn Dogecoin on every
        purchase.
      </p>
    </CardInfo>

    <CardInfo
      imageUrl={{
        mobile: 'assets/images/home/mobile/doge-card-buy.webp',
        desktop: 'assets/images/home/desktop/doge-card-buy.webp',
      }}
      imageWidth={{
        mobile: '183px',
        desktop: '292px',
      }}
      heading="Buy, Hold, Sell Dogecoin - No comission fees"
    >
      <p class="card-info-description">
        Use the DogeCard app to conveniently Buy, Sell and Hold Dogecoin with no
        commission fees.*
      </p>
    </CardInfo>

    <CardInfo
      isReversed={true}
      imageUrl={{
        mobile: 'assets/images/home/mobile/doge-card-spend.webp',
        desktop: 'assets/images/home/desktop/doge-card-spend.webp',
      }}
      imageWidth={{
        mobile: '183px',
        desktop: '292px',
      }}
      heading="Spend Dogecoin anywhere Visa is accepted"
    >
      <p class="card-info-description">
        With the black DogeCard, you can spend your Dogecoin anywhere visa is
        accepted. Simply transfer Dogecoin to your DogeCard wallet and spend
        with your black DogeCard.
      </p>
    </CardInfo>

    <CardInfo
      imageUrl={{
        mobile: 'assets/images/home/mobile/sercure.webp',
        tablet: 'assets/images/home/tablet/sercure.webp',
      }}
      imageWidth={{
        mobile: '289px',
        tablet: '480px',
      }}
      heading="Fast, Safe and Secure"
      className="card-info-secure"
    >
      <ol
        class="card-info-description d-flex-column hightlight-list card-info-secure-list"
      >
        <li>
          Your cash is FDIC insured by <a href="#" class="text-highlight"
            >Evolve Bank and Trust up to $250k
          </a>
        </li>
        <li>
          Your purchases are protected by VISA fraud and liability protection
        </li>
        <li>Your Dogecoin is secured by Zero Hash wallets</li>
      </ol>
    </CardInfo>

    <CardInfo
      isReversed={true}
      imageUrl={{
        mobile: 'assets/images/home/mobile/doge-rewards.webp',
        desktop: 'assets/images/home/desktop/doge-rewards.webp',
      }}
      imageWidth={{
        mobile: '183',
        desktop: '292',
      }}
      heading="Watch your Rewards Grow"
    >
      <p class="card-info-description">
        Pay your bills with DogeCard and watch as your Rewards grow.
      </p>
    </CardInfo>

    <CardInfo
      imageUrl={{
        mobile: 'assets/images/home/mobile/doge-control.webp',
        desktop: 'assets/images/home/desktop/doge-control.webp',
      }}
      imageWidth={{
        mobile: '183',
        desktop: '292',
      }}
      heading="You’re in control"
    >
      <p class="card-info-description">
        You’re always in control with notifications and transaction alerts
      </p>
    </CardInfo>
  </div>
</section>
