---
import Heading from 'components:Heading/index';
import Input from 'components:Input/index';
import Button from 'components:Button/index';
import './styles.css';
---

<div class="d-flex contact-form-wrapper">
  <Heading size="sm" className="contact-form-heading">Contact us</Heading>
  <p class="contact-form-description">
    Any questions or feedback? Send us a message!
  </p>
  <div class="d-flex contact-form-content">
    <div class="contact-form-info">
      <Heading size="xs" className="contact-form-info-heading">
        Contact Information
      </Heading>
      <p class="contact-form-info-description">
        Fill out the form and our team will get back to you within 24 hours.
      </p>
      <address class="contact-form-info-list">
        <div class="d-flex contact-form-info-item">
          <img
            class="contact-form-info-icon"
            src="assets/images/icons/contact-phone.svg"
            alt="DogeCard location"
          />
          <a href="tel:14242727344">+1-424-272-7344</a>
        </div>
        <div class="d-flex contact-form-info-item">
          <img
            class="contact-form-info-icon"
            src="assets/images/icons/contact-location.svg"
            alt="DogeCard location"
          />
          <p>10573 West Pico Blvd. #186, Los Angeles, CA 90064-2348</p>
        </div>
        <div class="d-flex contact-form-info-item">
          <img
            class="contact-form-info-icon"
            src="assets/images/icons/contact-time.svg"
            alt="DogeCard location"
          />
          <p><time>9:00</time> - <time>17:00</time></p>
        </div>
        <div class="d-flex contact-form-info-item">
          <img
            class="contact-form-info-icon"
            src="assets/images/icons/contact-calendar.svg"
            alt="DogeCard location"
          />
          <p>Monday - Friday</p>
        </div>
      </address>
    </div>
    <div class="d-flex contact-form">
      <div class="d-flex contact-form-user">
        <Input
          className="contact-form-name"
          colorScheme="dark"
          placeholder="Name"
        />
        <Input
          className="contact-form-email"
          colorScheme="dark"
          placeholder="Email"
        />
      </div>
      <textarea placeholder="Message" class="contact-form-message"></textarea>
      <Button className="contact-form-button">Submit</Button>
    </div>
  </div>
</div>
