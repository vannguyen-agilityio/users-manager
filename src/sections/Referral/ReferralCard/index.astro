---
import './styles.css';

export interface ReferralCardProps {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`referral-card ${className}`}>
  <div class="mg-auto d-flex justify-content-center referral-card-thumbnail">
    <picture>
      <source
        media="(min-width: 1200px)"
        srcset="assets/images/referral/desktop/card-visa.webp"
        width="243"
        height="386"
      />
      <source
        media="(min-width: 768px)"
        srcset="assets/images/referral/tablet/card-visa.webp"
        width="209"
        height="330"
      />
      <img
        src="assets/images/referral/mobile/card-visa.webp"
        alt="Referral Card"
        width="130"
        height="205"
      />
    </picture>
  </div>
  <div class="referral-card-content">
    <ul class="referral-card-step-list">
      <li class="d-flex">
        <i class="referral-card-step-icon ordered"></i>
        Joined waitlist
      </li>
      <li class="d-flex text-highlight">
        <i class="referral-card-step-icon send"></i>
        Send to friends
      </li>
      <li class="d-flex">
        <i class="referral-card-step-icon location"></i>
        Get DogeCard
      </li>
    </ul>
  </div>
</div>
