---
import './styles.css';

export interface InputProps {
  className?: string;
  placeholder?: string;
  name?: string;
  type?: string;
  pattern?: string;
  maxlength?: number;
  readonly?: boolean;
  autoFocus?: boolean;
  required?: boolean;
  value?: string;
  colorScheme?: string;
  size?: 'sm' | 'md' | 'lg';
  onChange?: (e: { target: HTMLInputElement }) => void;
  onBlur?: (e: { target: HTMLInputElement }) => void;
  errorMessage?: string;
}

const {
  className = '',
  name = '',
  type = 'text',
  maxlength = '',
  pattern = '',
  placeholder = '',
  readonly = false,
  value = '',
  colorScheme = 'light',
  size = 'sm',
  onChange = () => {},
  onBlur = () => {},
  required = false,
  errorMessage = '',
} = Astro.props;
---

<input
  readonly={readonly}
  autofocus
  type={type}
  name={name}
  placeholder={placeholder}
  required={required}
  class={`input input-${size} ${
    colorScheme == 'dark' ? 'input-dark' : 'input-light'
  } ${errorMessage ? 'input-error' : ''} ${className}`}
  value={value}
  size={size}
  onchange={onChange}
  onblur={onBlur}
/>
{errorMessage && <label class="input-error-message">{errorMessage}</label>}
