---
import THEME_BASE from 'themes:base';
import BaseHead from 'layouts:components/BaseHead/index';
import Header from 'layouts:components/Header/index';
import Footer from 'layouts:components/Footer/index';
import ApiProvider from './ApiProvider';
import HydrateProvider from 'src/layouts/HydrateProvider';

export interface Props {
  title?: string;
  description?: string;
  hasHeaderOverlap?: boolean;
  showHero?: boolean;
}

const { title, description, hasHeaderOverlap, showHero } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <!-- Header -->
    <Header hasOverlap={hasHeaderOverlap} />

    <!-- Main -->
    <main>
      <ApiProvider client:load>
        <HydrateProvider client:load showHero={showHero}>
          <slot />
        </HydrateProvider>
      </ApiProvider>
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Global styles -->
    <style
      is:global
      define:vars={{
        ...THEME_BASE,
      }}
    >

    </style>
    <script>
      var global = global || window;
      var Buffer = Buffer || [];
      var process = process || { env: { DEBUG: undefined }, version: [] };
    </script>
  </body>
</html>
