---
import THEME_BASE from 'themes:base';
import BaseHead from 'layouts:components/BaseHead/index';
import Header from 'layouts:components/Header/index';
import Footer from 'layouts:components/Footer/index';
// import AuthGuard from 'src/contexts/AuthGuard';
// import { AuthProvider } from 'src/contexts/AuthContext';
import ApiProvider from './ApiProvider';

export interface Props {
  title?: string;
  description?: string;
  hasHeaderOverlap?: boolean;
}

const { title, description, hasHeaderOverlap } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <ApiProvider client:load>
      <!-- <AuthProvider client:load> -->
      <!-- <AuthGuard> -->
      <!-- Header -->
      <Header hasOverlap={hasHeaderOverlap} />

      <!-- Main -->
      <main>
        <slot />
      </main>

      <!-- Footer -->
      <Footer />
      <!-- </AuthGuard> -->
      <!-- </AuthProvider> -->
    </ApiProvider>
    <!-- Global styles -->
    <style
      is:global
      define:vars={{
        ...THEME_BASE
      }}
    >

    </style>
    <script>
      var global = global || window;
      var Buffer = Buffer || [];
      var process = process || { env: { DEBUG: undefined }, version: [] };
    </script>
  </body>
</html>
