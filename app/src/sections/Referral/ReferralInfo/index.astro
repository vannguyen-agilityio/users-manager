---
import Heading from 'components:Heading/index';
import SocialIcon from 'components:SocialIcon/index';

// Styles
import './styles.css';
---

<div class="d-flex-column referral-card-info">
  <div class="text-center referral-card-head">
    <p class="referral-card-description">Next</p>
    <Heading size="sm" className="referral-info-heading" uppercase>
      Invite Friends, Get $25 in Dogecoin
    </Heading>
    <p class="referral-card-description">For each friend who uses your link:</p>
  </div>
  <div class="referral-card-body">
    <Heading size="sm" className="text-center referral-info-sub-heading"
      >You and your friend get ü§ù
    </Heading>
    <ol class="hightlight-list referral-info-list">
      <li class="referral-info-item">$25 in Dogecoin</li>
      <li class="referral-info-item">Move up waitlist</li>
    </ol>
  </div>
  <div class="d-flex referral-card-content">
    <p class="referral-social-description">Share:</p>
    <div class="d-flex referral-social-icon">
      <SocialIcon
        href="#"
        imageUrl="assets/images/icons/twitter.svg"
        imageAlt="DogeCard Twitter"
      />
      <SocialIcon
        href="#"
        imageUrl="assets/images/icons/facebook.svg"
        imageAlt="DogeCard book"
      />
    </div>
  </div>
</div>
