---
import './styles.css';
---

<section class="secured">
  <div class="container">
    <div class="secured-info d-flex flex-column">
      <h2 class="secured-heading">Your DogeCard is Secured by</h2>
      <div
        class="secured-content d-flex flex-column justify-content-center text-center"
      >
        <div class="secured-item">
          <img
            class="secured-icon"
            src="assets/images/icons/fdic-sm.svg"
            alt="fdic"
          />
          <p class="secured-description secured-description-fdic">
            $250,000 FDIC insured Evolve Bank & Trust
          </p>
        </div>
        <div class="secured-item">
          <img
            class="secured-icon"
            src="assets/images/icons/authentication-sm.svg"
            alt="authentication"
          />
          <p class="secured-description">
            Bank-grade encryption and authentication
          </p>
        </div>
        <div class="secured-item">
          <img
            class="secured-icon visa-icon"
            src="assets/images/icons/visa-sm.svg"
            alt="visa"
          />
          <p class="secured-description secured-description-visa">
            Fraud Protection Zero-Liability guarantee
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
