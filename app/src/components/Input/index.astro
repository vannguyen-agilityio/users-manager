---
import './styles.css';

export interface InputProps {
  className?: string;
  placeholder?: string;
  name?: string;
  type?: string;
  pattern?: string;
  maxlength?: string;
  readonly?: boolean;
  value?: string;
  colorScheme?: string;
  size?: 'sm | md | lg';
}

const {
  className = '',
  name = '',
  type = 'text',
  maxlength = '',
  pattern = '',
  placeholder = '',
  readonly = false,
  value = '',
  colorScheme = 'light',
  size = 'sm'
} = Astro.props;
---

<input
  readonly={readonly}
  autofocus
  type={type}
  name={name}
  placeholder={placeholder}
  required
  pattern={pattern}
  maxlength={maxlength}
  class={`input input-${size} ${className} ${
    colorScheme == 'dark' ? 'input-dark' : 'input-light'
  }`}
  value={value}
  size={size}
/>
