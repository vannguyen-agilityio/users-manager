---
import './styles.css';

export interface InputProps {
  className?: string;
  placeholder?: string;
  name?: string;
  type?: string;
  pattern?: string;
  maxlength?: string;
  readonly?: boolean;
  value?: string;
  colorScheme?: string;
}

const {
  className = '',
  name = '',
  type = '',
  maxlength = '',
  pattern = '',
  placeholder = '',
  readonly = false,
  value = '',
  colorScheme = 'light'
} = Astro.props;
---

<input
  readonly={readonly}
  autofocus
  type={type}
  name={name}
  placeholder={placeholder}
  required
  pattern={pattern}
  maxlength={maxlength}
  class={`input ${className} ${colorScheme == 'dark' ? 'bg-input-dark' : ''}`}
  value={value}
/>
