---
import './styles.css';

export interface InputProps {
  className?: string;
  placeholder?: string;
  name?: string;
  type?: string;
  pattern?: string;
  maxlength?: number;
  readonly?: boolean;
  autoFocus?: boolean;
  required?: boolean;
  value?: string;
  colorScheme?: string;
  size?: 'sm' | 'md' | 'lg';
  onChange?: () => void;
  onBlur?: () => void;
  errorMessage?: string;
}

const {
  className = '',
  name = '',
  type = 'text',
  maxlength = '',
  pattern = '',
  placeholder = '',
  readonly = false,
  value = '',
  colorScheme = 'light',
  size = 'sm',
  onChange = () => {},
  onBlur = () => {},
  required = false,
  errorMessage = ''
} = Astro.props;
---

<div class="d-flex-column">
  <input
    readonly={readonly}
    autofocus
    type={type}
    name={name}
    placeholder={placeholder}
    required={required}
    class={`input input-${size} ${className} ${
      colorScheme == 'dark' ? 'input-dark' : 'input-light'
    } ${errorMessage ? 'input-error' : ''}`}
    value={value}
    size={size}
    onchange={onChange}
    onblur={onBlur}
    accept={errorMessage}
  />

  {errorMessage && <label class="input-error-message">{errorMessage}</label>}
</div>
