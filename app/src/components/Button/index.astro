---
import rawStylesCSS from './button.css?raw';
export interface ButtonProps {
  disabled: boolean;
  type?: 'success' | 'danger';
  onclick: () => void;
}

let { disabled = false, type = '', onclick = () => {} } = Astro.props;
---

<button
  class={`btn ${type ? `btn-${type}` : ''} ${disabled ? 'btn-disabled' : ''}`}
  {onclick}
>
  <slot />
</button>

<style is:inline set:html={rawStylesCSS}>

</style>
