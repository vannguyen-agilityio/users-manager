---
import './styles.css';

export interface PostCardProps {
  description?: string;
  href?: string;
  avatarUrl?: string;
  avatarAlt?: string;
  imageUrl?: string;
  imageAlt?: string;
  iconUrl?: string;
  iconAlt?: string;
  altUrl?: string;
  profileName?: string;
  profileUserName?: string;
}

const {
  href,
  avatarAlt = 'Avatar',
  avatarUrl = 'https://www.w3schools.com/howto/img_avatar.png',
  imageUrl = 'assets/images/community/card-post/card-post-one.png',
  imageAlt = 'Card',
  iconUrl = '',
  iconAlt = '',
  description = '',
  profileName = '',
  profileUserName = ''
} = Astro.props as PostCardProps;
---

<div class="post-card">
  <div class="d-flex post-card-info">
    <a class="d-flex post-card-profile" href={href}>
      <img src={avatarUrl} alt={avatarAlt} class="post-card-profile-avatar" />
      <div class="d-flex-column post-card-profile-details">
        <span class="text-bold post-card-profile-name">{profileName}</span>
        <span class="post-card-profile-username">{profileUserName}</span>
      </div>
    </a>
    <a class="post-card-context"><img src={iconUrl} alt={iconAlt} /></a>
  </div>
  <p class="post-card-description">{description}</p>
  <a class="d-flex post-card-image" href="#"
    ><img src={imageUrl} alt={imageAlt} />
  </a>
</div>
